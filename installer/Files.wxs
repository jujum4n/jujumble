    <Fragment>
      <ComponentGroup Id="Qt">
        <ComponentRef Id="QtCore4.dll" />
        <ComponentRef Id="QtGui4.dll" />
        <ComponentRef Id="QtNetwork4.dll" />
        <ComponentRef Id="QtSql4.dll" />
