        <Component Id="QtGui4.dll">
          <File Source="$(var.QtDir)\bin\QtGui4.dll" KeyPath="yes" />
        </Component>
        <Component Id="QtNetwork4.dll">
          <File Source="$(var.QtDir)\bin\QtNetwork4.dll" KeyPath="yes" />
        </Component>
        <Component Id="QtSql4.dll">
